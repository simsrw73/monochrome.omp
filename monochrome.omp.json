{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#cccccc",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "╭─"
          }
        },
        {
          "type": "os",
          "style": "diamond",
          "foreground": "transparent",
          "background": "#cccccc",
          "leading_diamond": "\uE0B6",
          "properties": {
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "transparent",
          "background": "#cccccc",
          "properties": {
            "template": "{{ .UserName }}"
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "transparent",
          "background": "#cccccc",
          "trailing_diamond": "\uE0B4",
          "properties": {
            "prefix": "\uE5FF ",
            "home_icon": "~",
            "folder_icon": "\uF115",
            "folder_separator_icon": "/",
            "style": "folder"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "newline": false,
      "alignment": "right",
      "segments": [
        {
          "type": "shell",
          "style": "diamond",
          "foreground": "transparent",
          "background": "#cccccc",
          "leading_diamond": "\uE0B6",
          "properties": {
            "prefix": "",
            "postfix": "",
            "mapped_shell_names": {
              "pwsh": "\uF489",
              "cmd": "β:\\"
            }
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "transparent",
          "background": "#cccccc",
          "properties": {
            "always_enabled": true,
            "style": "austin",
            "prefix": " (",
            "postfix": ")"
          }
        },
        {
          "type": "exit",
          "style": "diamond",
          "foreground": "transparent",
          "background": "#cccccc",
          "background_templates": ["{{ if gt .Code 0 }}lightRed{{ end }}"],
          "leading_diamond": "",
          "trailing_diamond": "\uE0B4",
          "properties": {
            "always_enabled": true,
            "template": "{{ if gt .Code 0 }}\uf256{{ else }}\ue23a{{ end }}"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#cccccc",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "╰─"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#cccccc",
          "properties": {
            "prefix": "<#ffffff>[ </>",
            "postfix": "<#ffffff> ]-</>",
            "branch_icon": "\uE725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "template": "{{ .HEAD }}{{ if .Staging.Changed }}<#00AA00> ● {{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }}<#D75F00> ● {{ .Working.String }}</>{{ end }}"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#cccccc",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "\u276F"
          }
        }
      ]
    }
  ]
}
